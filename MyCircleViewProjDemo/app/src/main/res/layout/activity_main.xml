<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.examplehost.xg.mycircleviewprojdemo.view.TurnPlateViewScrowView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white" >

            <LinearLayout
                android:id="@+id/sport_detail_page_turnplateview_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <com.examplehost.xg.mycircleviewprojdemo.view.TurnplateView
                    android:id="@+id/sport_detail_page_turn_plate_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                </com.examplehost.xg.mycircleviewprojdemo.view.TurnplateView>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:id="@+id/sport_detail_page_left_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sport_detail_page_right_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <!-- 中间内容部分 -->

                <LinearLayout
                    android:id="@+id/sport_detail_page_frag_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:background="@color/transparent" >

                    <FrameLayout
                        android:id="@+id/sport_detail_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:orientation="vertical" >
                    </FrameLayout>
                </LinearLayout>
            </RelativeLayout>
        </FrameLayout>
    </com.examplehost.xg.mycircleviewprojdemo.view.TurnPlateViewScrowView>

</LinearLayout>