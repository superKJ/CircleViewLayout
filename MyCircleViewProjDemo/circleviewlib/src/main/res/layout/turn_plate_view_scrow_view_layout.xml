<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/sport_detail_page_turnplateview_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.webapp.xg.circleviewlib.view.TurnplateView
            android:id="@+id/sport_detail_page_turn_plate_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <!-- 中间内容部分 -->

    <LinearLayout
        android:id="@+id/sport_detail_page_frag_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <FrameLayout
            android:id="@+id/sport_detail_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:orientation="vertical"></FrameLayout>
    </LinearLayout>
</FrameLayout>